@model List<MatchMaker.Models.Participant>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                

                @if(Model.Count > 0){
                <a asp-controller="Home" asp-action="ClearList" class="btn btn-outline btn-danger btn-xs button-right float-right"><span class="fa fa-plus"></span> Clear list</a>
                }
                @if(Model.Count > 0 && (Model.Count % 2) == 0){
                <a asp-controller="Home" asp-action="Match" class="btn btn-outline btn-info btn-xs button-right float-right"><span class="fa fa-plus"></span> Generate matches </a>
                }

                <a class="btn btn-outline btn-success btn-xs button-right float-right" href="#" data-toggle="modal" data-target="#add_participant"><span class="fa fa-plus"></span> Add Participant</a>

            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="tbl_lists">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Match</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Match</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="add_participant" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form role="form" asp-controller="Home" asp-action="AddParticipant" method="post" asp-route-participants=Model data-toggle="validator">
                <div class="modal-header">
                    <h4 class="modal-title float-left" id="myModalLabel">Add new</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Name" tabindex="1">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->
